    <div class="container">
        <form action="/lista" method="POST" data-toggle="validator" role="form">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="textNome" class="control-label">Nome </label>
                    <input name="nome" class="form-control" placeholder=" Nome do Aluno..." type="text">
                </div>
                <div class="form-group col-md-4">
                    <label for="inputPhone" class="control-label">E-mail</label>
                    <input name="email" type="text" step="0.01" class="form-control" placeholder="email...">
                </div>
                <div class="form-group col-md-2">
                    <label for="inputEmail" class="control-label">Matrícula</label>
                    <input name="matricula" class="form-control" placeholder="matrícula..." type="number">
                </div>
                <div class="form-group col-md-2">
                    <label for="inputCity" class="control-label">Turma</label>
                    <input name="turma" type="number" step="0.01" class="form-control" placeholder="turma...">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="inputCity" class="control-label">Orientador</label>
                    <input name="orientador" type="text" step="0.01" class="form-control" placeholder="turma...">
                </div>

                <div class="form-group col-md-4">
                    <label for="inputCity" class="control-label">Local do Estágio </label>
                    <input name="local" type="text" step="0.01" class="form-control" placeholder="turma...">
                </div>

                <div class="form-group col-md-2">
                    <label for="inputCity" class="control-label">Início</label>
                    <input name="inicio" type="date" step="0.01" class="form-control" placeholder="turma...">
                </div>

                <div class="form-group col-md-2">
                    <label for="inputCity" class="control-label">Término</label>
                    <input name="termino" type="date" step="0.01" class="form-control" placeholder="turma...">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="sel1">Etapa 1</label>
                    <select class="form-control" name="etapa1">
            <option>N/C</option>
            <option>OK</option>
          </select>
                </div>

                <div class="form-group col-md-4">
                    <label for="sel1">Etapa 2</label>
