        <% data.forEach( function(details) { %>
        <div class="container">
            <form action="/edit/<%=details._id%>" method="POST" data-toggle="validator" role="form">	  
                <div class="form-group">	    
                    <label for="textNome" class="control-label">Nome</label>	    
                    <input  name="nome" class="form-control" value="<%=details.nome%>" type="text">	  
                </div>	  	  
                    <div class="form-group">	    
                        <label for="inputqtde" class="control-label">Matricula</label>	    
                        <input  name="matricula" class="form-control" value="<%=details.matricula%>"  type="number">	  
                    
                    </div>	  	  
                        <div class="form-group">	    
                            <label for="inputPhone" class="control-label">email</label>	    
                            <input type="text" name="email" class="form-control" value="<%=details.email%>" >	  
                        </div>	  	
    
                            <div class="form-group">	    
                                <label for="inputCity" class="control-label">turma</label>	    
                                <input type="text" name="turma" class="form-control"  value="<%=details.turma%>" >	  
                            </div>	  
                            
                            <div class="form-group">	    
                                <label for="inputCity" class="control-label">Orientador</label>	    
                                <input type="text" name="orientador" class="form-control"  value="<%=details.orientador%>" >	  
                            </div>
                            
                            <div class="form-group">	    
                                <label for="inputCity" class="control-label">Local do Estágio</label>	    
                                <input type="text" name="local" class="form-control"  value="<%=details.local%>" >	  
                            </div>

                            <div class="form-group">	    
                                <label for="inputCity" class="control-label">Início</label>	    
                                <input type="text" name="inicio" class="form-control"  value="<%=details.inicio%>" >	  
                            </div>	

                            <div class="form-group">	    
                                <label for="inputCity" class="control-label">Término</label>	    
                                <input type="text" name="termino" class="form-control"  value="<%=details.turma%>" >	  
                            </div>	
                                                
                                <button type="submit" class="btn btn-primary">Salvar</button>	
            </form> 
        </div>

